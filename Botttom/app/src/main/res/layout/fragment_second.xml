<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.screens1.SecondFragment"
    android:background="@color/whiteZero">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!--android:fillViewport="true"-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/frameLay"
                    android:layout_width="335dip"
                    android:layout_height="152dp"
                    android:layout_marginTop="35dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/ima"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/per"
                        android:contentDescription="@string/fab_transformation_sheet_behavior"
                        tools:ignore="DuplicateSpeakableTextCheck" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="101dp"
                        android:gravity="center"
                        android:text="Шкала псих. выгорания на работе"
                        android:textColor="#000000"
                        android:textSize="25sp"

                        tools:ignore="HardcodedText,VisualLintOverlap" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="139dp"
                        android:gravity="center|bottom"
                        android:text="Проверьте степень вашей усталости от работы"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        tools:ignore="HardcodedText" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameLfay"
                    android:layout_width="335dip"
                    android:layout_height="152dp"
                    android:layout_marginTop="35dp"
                    app:layout_constraintEnd_toEndOf="@+id/frameLay"
                    app:layout_constraintStart_toStartOf="@+id/frameLay"
                    app:layout_constraintTop_toBottomOf="@+id/frameLay">

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/vtor"
                        android:contentDescription="@string/fab_transformation_sheet_behavior" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="103dp"
                        android:gravity="center|bottom"
                        android:text="Определите ваш текущий уровень стресса"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        tools:ignore="HardcodedText,VisualLintOverlap" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:gravity="center"
                        android:text="Тест на уровень стресса"
                        android:textColor="#000000"
                        android:textSize="25sp"

                        tools:ignore="HardcodedText" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fradasmeLfay"
                    android:layout_width="335dip"
                    android:layout_height="152dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="85dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/frameLfay"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toStartOf="@+id/frameLfay"
                    app:layout_constraintTop_toBottomOf="@+id/frameLfay"
                    tools:ignore="VisualLintBounds">


                    <ImageButton
                        android:id="@+id/imageButton9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/per"
                        android:contentDescription="@string/fab_transformation_sheet_behavior" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="103dp"
                        android:gravity="center|bottom"
                        android:text="Определите ваш уровень тревожности"
                        android:textColor="#000000"
                        android:textSize="16sp"

                        tools:ignore="HardcodedText,VisualLintOverlap" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="124dp"
                        android:gravity="center"
                        android:text="Тест на уровень стресса"
                        android:textColor="#000000"
                        android:textSize="25sp"

                        tools:ignore="HardcodedText" />

                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>